{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/graphql-codegen-hasura-gql",
      "packages/graphql-codegen-hasura-typescript"
    ]
  },
  "name": "graphql-codegen-hasura",
  "version": "0.1.0",
  "description": "A collection of graphql codgen plugins to support hasura development",
  "author": "ahrnee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahrnee/graphql-codegen-hasura"
  },
  "scripts": {
    "build": "tsc --build tsconfig-all-ref.json --verbose",
    "rebuild": "yarn run build -- --force",
    "packages:link": "lerna bootstrap",
    "packages:publish": "yarn run packages:build && lerna publish --stream",
    "packages:build": "learna build --stream",
    "packages:rebuild": "tsc --build --force tsconfig-pkg-ref.json --verbose"
  },
  "devDependencies": {
    "lerna": "^3.14.1",
    "ts-node": "~7.0.0",
    "typescript": "^3.7.2"
  }
